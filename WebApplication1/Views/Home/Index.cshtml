@{
    // este pedaço de código está escrito em C#
    ViewData["Title"] = "Home Page";

    //var auxiliar
    string resposta = "";

    //recuperar os dados enviados pelo controller
    if (string.IsNullOrEmpty(ViewBag.X1))
    {
        resposta ="Vazio";
    }
    else
    {
        resposta = "as raízes são: x1 = " + ViewBag.X1 + " e x2 = " + ViewBag.X2;
    }
}

<div class="text-center">
    <h1 class="display-4">Soluções de uma equação do 2º grau</h1>
    
</div>

